{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "vitest",
      "vue/ref-macros",
      "@types/node",
      "@types/chrome"
    ],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["dist", "node_modules", "public"]
}
