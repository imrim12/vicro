{
  "compilerOptions": {
    "rootDir": "./services",
    "baseUrl": "./services",
    "module": "AMD",
    "outFile": "./dist/background.js",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest", "@types/node", "@types/chrome"]
  },
  "include": ["./services/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
